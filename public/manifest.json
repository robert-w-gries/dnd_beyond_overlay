{
  "manifest_version": 2,
  "name": "DnD Beyond Overlay",
  "author": "Rob Gries",
  "version": "0.1",
  "description": "Use the power of DnD Beyond from the comfort of your Roll20 session.",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "logo192.png"
  },
  "content_security_policy": "script-src-elem 'self' 'unsafe-eval' 'unsafe-inline' https://unpkg.com/x-frame-bypass https://*;",
  "content_scripts": [{
    "matches": ["*://app.roll20.net/editor/"],
    "js": ["inject_sidebar.js"]
  }],
  "permissions": [
    "*://app.roll20.net/editor/",
    "*://*.dndbeyond.com/*",
    "*://cors.io/*://www.dndbeyond.com/characters/*"
  ],
  "web_accessible_resources": ["index.html"]
}